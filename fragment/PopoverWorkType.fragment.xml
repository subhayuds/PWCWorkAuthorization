<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
	<Popover title="Work Types" class="sapUiContentPadding" placement="Bottom" contentWidth="10%" contentMinWidth="10%">
		<Table items="{/WorkType}">
	        <columns>
	            <Column/>
	        </columns>
	        <items>
	            <ColumnListItem>
	                <cells>
	                    <Text text="{WorkType}"/>
	                </cells>
	            </ColumnListItem>
	        </items>
    	</Table>
	</Popover>
</core:FragmentDefinition>